<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class='form-header'>
    <div class='form-header-title'>
      Sign In
    </div>
    <div class='form-header-links'>
      Don't have an accout yet? <%= link_to 'Sign Up', new_registration_path(resource_name) %>
    </div>
  </div>
  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email,
      autofocus: true,
      value: Rails.env.development? ? 'test@test.com' : '' %>
  </div>

  <div>
    <%= f.label :password %><br />
    <%= f.password_field :password,
      autocomplete: 'off',
      value: Rails.env.development? ? 'testtest' : '' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class='form-rememberable'>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class='form-submit-wrapper'>
    <%= f.submit 'Sign In' %>
  </div>

  <%= render 'devise/shared/links' %>
<% end %>
