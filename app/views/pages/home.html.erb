<div class='container-fluid'>
  <div class='row-fluid'>
    <div class='col-md-4 col-md-offset-4'>
      <div class='text-center'>
        <h1>Cover page</h1>
        <% if user_signed_in? %>
          <%= link_to('Create post', new_users_post_path, class: 'btn btn-default') %>
        <% end %>
      </div>
      <% @users_posts.reverse.each do |post| %>
        <div class='home-post'>
          <%= render partial: 'shared/post_votes', locals: { post: post } %>
          <h4>'<%= post.title %>' by <%= link_to("#{post.user.username}", user_profile_path(post.user.username))%></h4>
          <div class='well'>
            <%= post.body %>
          </div>
          <div class="show-post-wrapper">
            <%= link_to("Comments (#{post.comments.count})", users_post_path(post), class: 'btn pull-right') %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
