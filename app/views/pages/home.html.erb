<% if user_signed_in? %>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="col-md-6 col-md-offset-3 text-center">
                <h1>You're logged in as: <%= current_user.email %></h1><br>
                <%= link_to "Create a new post", "#", class: "btn btn-default" %>
            </div>
        </div>
    </div>
<% else %>
    <h1 class="text-center">Welcome to Quill!</h1>
<% end %>