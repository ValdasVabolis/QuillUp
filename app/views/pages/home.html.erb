<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <h1 class>Users Posts</h1>
        <% if user_signed_in? %>
        <%= link_to "Create New Post", new_users_post_path, class: "btn btn-default" %>
        <%= link_to "View Post History", users_posts_path, class: "btn btn-default" %>
        <% end %>
      </div>
      <% @users_posts.each do |post| %>
        <div class='home-post'>
          <%= render partial: 'shared/post_votes', locals: { post: post } %>
          <h4>'<%= post.title %>' by <%= post.user.email %></h4>
          <div class="well">
            <%= post.body %>
          </div>
          <%= link_to 'Show', users_post_path(post) %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= link_to 'New Users Post', new_users_post_path %>