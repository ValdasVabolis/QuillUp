<div class="question-answer answer" data-id="<%= answer.id %>">
    <% if answer.deleted? %>
      <p>[deleted]</p>
    <% else %>
      <div class="answer-author">
        <%= link_to("#{answer.user.username}", user_profile_path(answer.user.username)) %>
      </div>
    <% end %>
  <div class="answer-body">
    <%= answer.body %>
  </div>
  <%= render partial: 'shared/answer_votes', locals: { answer: answer } %>
  <%= render partial: 'shared/answer_links', locals: { answer: answer } %>
</div>