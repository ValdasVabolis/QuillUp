<div class="question-links">
  <%= link_to "Answers (#{question.answers.count})",
    users_question_path(question),
    remote: true,
    method: :get %>
  <div class='question-tools'>
    <% unless question.deleted? %>
      <%= link_to('Delete', users_question_path(question), 
        remote: true, 
        method: :delete,
        id: 'delete', 
        data: { confirm: 'Are you sure?' }) %>
    <% end %>
  </div>
</div>
