<nav>
  <%= link_to root_path, class: 'nav-logo-text' do %>
    Quill<span>up</span>
  <% end %>
  <ul>
    <% if user_signed_in? %>
      <li>
        <%= link_to my_account_path do %>
          <%= fa_icon 'user-circle-o' %>
          <span>My Account</span>
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <%= fa_icon 'sign-out' %>
