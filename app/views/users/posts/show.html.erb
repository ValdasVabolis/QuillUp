<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @users_post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @users_post.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @users_post.user.email %>
</p>

<%= render template: 'users/posts/comments/new', layout: false, locals: { post: @users_post } %>

<!-- For each comment in this post, display it -->
<h2>Comments</h2>
<% @users_post.comments.reverse.each do |comment| %>
  <h4>User #<%= comment.user_id %></h4>
  <p><%= comment.body %></p>
<% end %>

<%= link_to 'Edit', edit_users_post_path(@users_post) %> |
<%= link_to 'Back', users_posts_path %>
