var parent = $('.comment[data-id=<%= @parent.id %>]');
parent.find('#comment-form').remove();
var parent_comments = parent.find('.post-comments');
if(parent_comments.length === 0) {
	parent_comments = $('<%= j render(partial: "shared/post_comments", locals: { comments: [@comment] }) %>');
	parent.append(parent_comments);
} else {
	var created_comment = $('<% j render(partial: "shared/post_comment", locals: { comment: @comment }) %>');
	parent_comments.append(created_comment);
}