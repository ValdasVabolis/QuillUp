var form = '<%= j render("users/posts/comments/form", layout: false, locals: { parent: @parent, post: @post, comment: @comment, url: users_posts_comments_path }) %>';
var comment = '.post-comment[data-id=<%= @comment.id %>]';
if($(comment).next().attr('id') != 'comment-form') {
  $(form).insertAfter($(comment));
} else {
  $(comment).next().toggle();
}
