<% if user_signed_in? %>
  <h2>New Users Posts Comment</h2>
  <%= render 'users/posts/comments/form', post: post, comment: Comment.new, url: users_posts_comments_path %>
  <%= link_to 'Back', users_posts_comments_path %>
<% else %>
  <h2>You're not logged in. Sign up or log in to participate in the comment section.</h2>
<% end %>