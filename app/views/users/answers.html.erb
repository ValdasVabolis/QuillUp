 <% @user.answers.each do |answer| %>
  <% unless answer.deleted? %>
    <div>
      <h4><%= link_to zero_width_space_interleave(answer.question.title).html_safe, users_question_path(answer.question) %></h4>
      <p><%= answer.body %></p>
    </div>
  <% end %>
<% end %>
<%= will_paginate @answers %>